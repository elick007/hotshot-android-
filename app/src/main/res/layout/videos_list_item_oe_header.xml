<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">
    <TextView
        android:id="@+id/oe_item_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日热门"
        android:textColor="@color/bottom_navigation_selected"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_header_image_view"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/item_header_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:gravity="center"
            android:background="@drawable/video_duration_textview_bg"
            android:text="29:22"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/title_image"/>
        <TextView
            android:id="@+id/oe_item_bottom_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/bottom_navigation_selected" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/share_icon"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>