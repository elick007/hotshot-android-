<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/oe_item_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日热门"
        android:textColor="@color/bottom_navigation_selected"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_header_image_view"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/item_header_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:gravity="center"
            android:background="@drawable/video_duration_textview_bg"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            />
    </FrameLayout>

        <TextView
            android:id="@+id/oe_item_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/item_text_size_title"
            android:gravity="center|left"
            android:textColor="@color/fragment_video_text"
            />

</LinearLayout>