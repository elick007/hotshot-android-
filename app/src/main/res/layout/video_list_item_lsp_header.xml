<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
        <ImageView
            android:id="@+id/lsp_item_image_header"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="6dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lsp_item_title_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/item_text_size_title"
            android:textColor="@color/fragment_video_text" />
        <TextView
            android:id="@+id/lsp_item_author_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size_author"
            android:textColor="@color/fragment_video_author"/>
    </LinearLayout>



</LinearLayout>