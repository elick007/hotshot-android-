<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<ImageView
    android:id="@+id/history_item_image"
    android:layout_width="wrap_content"
    android:layout_height="108dp"
    android:scaleType="fitXY"
    android:layout_gravity="center"/>
    <TextView
        android:id="@+id/history_item_title"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:textSize="15sp"
        android:padding="8dp"
        android:lines="2"
        android:textColor="@color/fragment_video_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp">
        <TextView
            android:id="@+id/history_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fragment_video_author"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="12sp"
            android:textColor="@color/fragment_video_author"/>
        <TextView
            android:id="@+id/history_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/fragment_video_author"/>
    </LinearLayout>
</LinearLayout>