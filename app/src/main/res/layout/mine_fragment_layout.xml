<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout
    android:id="@+id/mine_fragment_change_info"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/user_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_my_edit_info"
        android:layout_gravity="right"
        android:layout_margin="6dp"
        android:text="修改资料"
        android:gravity="center"
        android:textColor="@color/white"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <hotshot.elick.com.hotshot.widget.CircleImageView
        android:id="@+id/mine_fragment_user_avatar"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_default"/>
    <TextView
        android:id="@+id/mine_fragment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:paddingTop="12dp" />
</LinearLayout>
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="18dp"
        android:paddingBottom="22dp">
        <LinearLayout
            android:id="@+id/mine_fragment_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_my_history"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="浏览历史"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_fragment_favor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_my_favor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="我的收藏"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_fragment_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_my_download"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="我的下载"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f1f1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="18dp">
    <FrameLayout
        android:id="@+id/mine_fragment_setting"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="17sp"
            android:layout_gravity="left|center"/>
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_arrow_right"
            android:layout_gravity="right|center"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>
    <FrameLayout
        android:id="@+id/mine_fragment_about"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textSize="17sp"
            android:layout_gravity="left|center"/>
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_arrow_right"
            android:layout_gravity="right|center"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>
    <FrameLayout
        android:id="@+id/mine_fragment_help"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textSize="17sp"
            android:layout_gravity="left|center"/>
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_arrow_right"
            android:layout_gravity="right|center"/>
    </FrameLayout>
</LinearLayout>
</LinearLayout>