<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/item_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/video_duration_textview_bg"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_bottom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center|left"
        android:maxLines="1"
        android:textColor="@color/fragment_video_text"
        android:textSize="@dimen/item_text_size_title" />


</LinearLayout>